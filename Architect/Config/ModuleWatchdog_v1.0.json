      "critical": true
    },
    {
      "name": "DraftBoard_Planner",
      "path": "Architect/Config/DraftBoard_Planner_v1.9.json",
      "critical": true
    },
    {
      "name": "ScoutingCycle",
      "path": "Architect/Config/ScoutingCycle_v2.0.json",
