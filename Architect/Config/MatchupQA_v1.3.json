{
  "qa_name": "MatchupQA",
  "version": "1.3",
  "context": "Matchup QA configuration with slider-direction validation using EA-correct model.",
  "slider_rules": {
    "carry_vs_dump": "0=Dump,10=Carry",
    "cycle_vs_shoot": "0=Cycle,10=Shoot",
    "dontblock_vs_block": "0=Don't Block,10=Block",
    "holdline_vs_pinch": "0=Hold Line,10=Pinch",
    "dcycle_vs_dshoot": "0=Cycle,10=Shoot",
    "trap_slider_0to6": "0=Full Trap,6=Full Forecheck"
  },
  "checks": {
    "validate_slider_direction": true,
    "validate_matchup_card_values": true,
    "validate_presets": [
      "Secure Mode — Lead by 2+ (v2.2)",
      "Push Mode — Trailing by 1 (v2.2)",
      "All-In Mode — Trailing by 2 (v2.2)"
    ],
    "warn_if_inverted": true,
    "fail_if_out_of_range": true
  },
  "integration": {
    "latest_matchup_card_json": "Architect/Reports/Matchups/latest_matchup.json",
    "presets_dir": "Architect/Configs/Adaptive_Presets/",
    "export_report_to": "Architect/Reports/Integrity/MatchupQA_latest.json"
  },
  "automation_hooks": {
    "post_matchup": [
      "/matchup_qa run --config \"Architect/Config/MatchupQA_v1.3.json\" --latest --verbose"
    ],
    "dailyops": [
      "include_in_dailyops_slider_section": true
    ]
  }
}