{
  "auto_commit": true,
  "include_commands": [
    "resync",
    "gameplan",
    "qa_pre_game",
    "dynasty_savepoint",
    "verify_strategies"
  ],
  "commit_format": {
    "headline_prefix": "create",
    "headline_template": "create: {artifact} — {context}",
    "description_template": [
      "- Command: {command}",
      "- Artifact: {artifact}",
      "- Context: {context}",
      "- Source: {source}",
      "- Timestamp: {timestamp}",
      "- Opponent: {opponent}",
      "- Result: {result}",
      "- Score: {score}",
      "- Starting Goalie: {goalie}",
      "- Notes: {notes}"
    ]
  },
  "defaults": {
    "artifact": "JSON update",
    "context": "Architect↔Dynasty sync",
    "source": "Architect GPT (auto)",
    "opponent": "TBD",
    "result": "Pending",
    "score": "0-0",
    "goalie": "N/A",
    "notes": "Auto-commit enabled per Austin’s preference (iPhone 14 Pro Max)."
  },
  "device_profile": {
    "author": "Austin Olsen",
    "platform": "iPhone 14 Pro Max",
    "layout": "mobile-friendly"
  },
  "safety": {
    "dry_run": false,
    "max_commits_per_minute": 6,
    "blocklist_paths": [
      "Architect/Secrets/",
      "Architect/Private/"
    ],
    "required_suffix_check": true
  },
  "metadata_capture": {
    "enabled": true,
    "data_sources": [
      "GameTracker/boxscore.json",
      "GameTracker/live_tracker.json",
      "Lines/current_goalie.json"
    ],
    "parse_fields": {
      "opponent": "opponent_team",
      "result": "game_result",
      "score": "final_score",
      "goalie": "starting_goalie"
    },
    "fallback_behavior": "TBD"
  },
  "branching": {
    "enabled": true,
    "mode": "per_opponent",
    "pattern": "gameplan/{opponent_sanitized}-{date}",
    "date_format": "YYYY-MM-DD",
    "sanitize_rules": {
      "lowercase": true,
      "replace_spaces_with": "-",
      "strip_chars": ["(", ")", "[", "]", "{", "}", ",", ".", "!", "?", ":", ";", "'", "\"", "#", "@", "&", "%", "$", "*", "+", "="]
    },
    "automerge": true,
    "merge_strategy": "squash",
    "delete_branch_after_merge": true,
    "labels": ["auto", "gameplan", "{opponent_sanitized}"]
  }
}