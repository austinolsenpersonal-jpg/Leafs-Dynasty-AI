{
  "schema": "game_summary_generator_v1.0",
  "meta": {
    "system": "Leafs Dynasty AI",
    "environment": "Architect v6.2",
    "description": "Formats compact Markdown game summaries automatically after each synced game log.",
    "last_updated": "2024-12-10"
  },
  "inputs": {
    "game_log_root": "Architect/Reports/GameLogs/",
    "team_stats_nhl": "Architect/Reports/TeamStats/NHL/",
    "team_stats_ahl": "Architect/Reports/TeamStats/AHL/",
    "player_stats_nhl": "Architect/Reports/PlayerStats/NHL/",
    "player_stats_ahl": "Architect/Reports/PlayerStats/AHL/",
    "schedule_json": "Architect/Schedule/NHL_Schedule_2024-12_to_2025-04.json"
  },
  "output": {
    "folder": "Architect/Reports/GameSummaries/",
    "filename_format": "GameSummary_{level}_{YYYY-MM-DD}_{OPP}.md",
    "include_links": true,
    "link_base": "Architect/Reports/GameLogs/"
  },
  "template": {
    "title": "üèí {TEAM} vs {OPP} ‚Äî {DATE} ({LEVEL})",
    "sections": [
      {
        "name": "Result",
        "fields": [
          "{TEAM} {TEAM_GOALS} ‚Äì {OPP_GOALS} {OPP}",
          "Record Span: {SPAN_RECORD} | Last 5: {LAST5}"
        ]
      },
      {
        "name": "Team Snapshot",
        "fields": [
          "Shots: {TEAM_SHOTS} | Hits: {TEAM_HITS} | FO%: {TEAM_FO_PCT}",
          "PP: {TEAM_PP_GOALS}/{TEAM_PP_CHANCES} ({TEAM_PP_PCT}%) | PK: {TEAM_PK_PCT}%"
        ]
      },
      {
        "name": "Top Skaters",
        "list": "{TOP_SKATERS:3}", 
        "note": "Auto-picks by points, then xG/TOI tiebreak."
      },
      {
        "name": "Goaltending",
        "fields": [
          "{GOALIE_NAME} ‚Äî {SV}/{SA} SV ({SV_PCT}) | GA: {GA} | TOI: {TOI}"
        ]
      },
      {
        "name": "Special Teams Notes",
        "bullets": [
          "PP looks: {PP_NOTES}",
          "PK clears: {PK_NOTES}"
        ]
      },
      {
        "name": "Coaching Card",
        "bullets": [
          "System: {FORECHECK} / {NEUTRAL_ZONE} / {DZ_STRAT} / {PRESSURE}",
          "Next Opponent: {NEXT_OPP} on {NEXT_DATE}"
        ]
      }
    ],
    "footer": "Generated by Leafs Dynasty Suite ‚Ä¢ Canon v4.1 ‚Ä¢ Architect v6.2"
  },
  "logic": {
    "top_skaters_rules": {
      "min_toi_minutes": 10,
      "rank_order": ["points", "xg", "toi"]
    },
    "goalie_pick": "starter_if_present_else_top_toi",
    "pp_notes_fallback": "Low volume; focus on entries next game",
    "pk_notes_fallback": "Protect slot; shorten clears"
  },
  "automation": {
    "trigger_on_new_game_log": true,
    "validate_against_schema": "Architect/Reports/schemas/game_log.schema.json",
    "create_savepoint_after_write": true,
    "savepoint_path": "Architect/Savepoints/",
    "emit_to_console": true
  },
  "validation": {
    "checksum": null,
    "verified": false
  }
}