{
  "patch": "System Intelligence Pack v5.1",
  "description": "Opponent memory, discipline control, dynamic special teams, coaching personalities.",
  "requires": { "canon": "v4.1", "architect": "v6.1", "min_stack": ["DynastyMax v4.9", "Elite Convergence v5.0"] },
  "modules": [
    {
      "id": "M130",
      "name": "Opponent Strategy Memory+",
      "enabled": true,
      "triggers": ["pre_game", "command:/matchup"],
      "inputs": { "opponent_hist": "planner/opponent_cards/*_card_*.json" },
      "config": { "lookback_games": 3, "weight_recent": 0.6, "auto_counter": true },
      "output": "planner/presets/AutoCounters_${opponent}_${date}.json"
    },
    {
      "id": "M131",
      "name": "RealPenalty Discipline",
      "enabled": true,
      "triggers": ["ingame_tick", "between_periods"],
      "inputs": { "morale": "elite/chemistry_latest.json", "penalty_log": "snapshots/auto/*_penalties.json" },
      "config": { "aggression_floor": 0.35, "aggression_ceiling": 0.70, "tilt_guard": true },
      "effects": { "hit_bias_delta": -0.03, "stick_lift_bias_delta": +0.02 }
    },
    {
      "id": "M132",
      "name": "Dynamic PP/PK 2.0",
      "enabled": true,
      "triggers": ["pp_start", "pk_start", "special_teams_review"],
      "inputs": { "pp_denial_map": "analytics/pp_entries_*.json", "pk_threats": "planner/telemetry/pp_threats_${opponent}.json" },
      "config": {
        "pp_rotation_every_games": 10,
        "pp_templates": ["Overload","Umbrella","1-3-1 Rotation"],
        "pk_templates": ["Diamond","Passive Box","Large Box"],
        "auto_switch_latency_sec": 12
      }
    },
    {
      "id": "M133",
      "name": "Coaching Tree Engine",
      "enabled": true,
      "triggers": ["post_game","weekly_cycle"],
      "config": {
        "assistants": [
          { "role": "D Coach", "style": "conservative", "morale_bias": +0.2 },
          { "role": "PP Coach", "style": "creative", "morale_bias": +0.1 },
          { "role": "PK Coach", "style": "discipline", "morale_bias": +0.1 }
        ],
        "bounce_back_multiplier": 1.15
      },
      "effects": { "chem_decay_slow": true, "loss_recovery_boost": true }
    }
  ],
  "register": { "packs": ["SystemIntelligence v5.1"] }
}