{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Leafs Dynasty Game Log",
  "type": "object",
  "required": ["schema_version", "season", "game_date", "game_id", "opponent", "result"],
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "season": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}$" },
    "game_date": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "game_id": { "type": "string" },
    "venue": { "type": "string", "enum": ["home", "away"] },
    "opponent": { "type": "string", "minLength": 2, "maxLength": 3 },
    "result": {
      "type": "object",
      "required": ["tor", "opp"],
      "properties": { "tor": { "type": "integer" }, "opp": { "type": "integer" } }
    },
    "summary": { "type": "object" },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["period", "time", "team", "type", "scorer"],
        "properties": {
          "period": { "type": "integer", "minimum": 1, "maximum": 5 },
          "time": { "type": "string" },
          "team": { "type": "string" },
          "type": { "type": "string" },
          "scorer": { "type": "string" },
          "assists": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "team_stats": { "type": "object" },
    "leafs_skaters": {
      "type": "array",
      "items": { "type": "object", "properties": { "player": { "type": "string" } }, "required": ["player"] }
    },
    "leafs_goalies": {
      "type": "array",
      "items": { "type": "object", "properties": { "goalie": { "type": "string" } }, "required": ["goalie"] }
    }
  },
  "additionalProperties": true
}