{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Architect DailyOps Schema v1.0",
  "description": "Validation schema for all Architect DailyOps JSON reports.",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+$"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "system": {
      "type": "string",
      "enum": ["Architect GPT", "Leafs Dynasty Suite"]
    },
    "summary": {
      "type": "object",
      "properties": {
        "games_processed": { "type": "integer" },
        "snapshots_saved": { "type": "integer" },
        "verifications_run": { "type": "integer" },
        "commits_pushed": { "type": "integer" }
      },
      "required": ["games_processed", "snapshots_saved", "verifications_run", "commits_pushed"]
    },
    "integrity_check": {
      "type": "object",
      "properties": {
        "repo_guard": { "type": "string" },
        "canon_guard": { "type": "string" },
        "qa_status": { "type": "string" }
      },
      "required": ["repo_guard", "canon_guard", "qa_status"]
    },
    "notes": {
      "type": "string",
      "description": "Optional freeform text for automation log notes."
    }
  },
  "required": ["schema_version", "date", "system", "summary", "integrity_check"],
  "additionalProperties": false
}