{
  "preset_name": "All-In Mode — Trailing by 2 (v2.0)",
  "version": "2.0",
  "context": "Use when trailing by 2 goals with 6:00 or less remaining. Maximum offensive pressure while keeping minimal defensive structure to avoid clean odd-man rushes.",
  "systems": {
    "forecheck_system": "2-3",
    "neutral_zone": "1-3-1",
    "trap_slider_0to6": 6,
    "defensive_pressure": "High Pressure",
    "defensive_strategy": "Staggered",
    "offensive_pressure": "Full Attack",
    "control_breakout": "Three High",
    "quick_breakout": "Leave Zone Early"
  },
  "lines_sliders": {
    "forwards": {
      "L1": {"strategy": "Behind the Net", "carry": 7, "cycle": 7, "efficiency": 6, "block": 2},
      "L2": {"strategy": "Overload",        "carry": 7, "cycle": 7, "efficiency": 6, "block": 2},
      "L3": {"strategy": "Crash the Net",   "carry": 5, "cycle": 7, "efficiency": 6, "block": 4},
      "L4": {"strategy": "Overload",        "carry": 6, "cycle": 7, "efficiency": 5, "block": 3}
    },
    "defense": {
      "P1_Rielly-Carlo": {"hold_pinch": 7, "d_cycle_shoot": 5},
      "P2_OEL-Dumba":    {"hold_pinch": 7, "d_cycle_shoot": 5},
      "P3_McCabe-Tanev": {"hold_pinch": 5, "d_cycle_shoot": 6}
    }
  },
  "bench_rules": {
    "oz_draws": "Double-shift Matthews line; Tavares line takes immediate follow-up if offensive draw repeats.",
    "dz_draws": "Avoid 4th line; use Kämpf only after icings then immediate change.",
    "shift_caps_top6_seconds": 50,
    "pull_goalie": {
      "default_time": "2:30",
      "earlier_if": "pp_delayed_or_oz_draw_under_3min",
      "formation_6v5": "1-3-1",
      "roles_6v5": "QB=Rielly; LFlank=Nylander(RH); RFlank=Marner(RH); Bumper=Matthews(RH); Net=Tavares(LH); ExtraF=Robertson(LH)"
    }
  },
  "adaptive_triggers": [
    {"when": "deficit_reduces_to_1", "do": {"preset_switch": "Push Mode — Trailing by 1 (v2.0)"}},
    {"when": "two_failed_controlled_entries", "do": {"quick_breakout": "Stay Wide"}},
    {"when": "recovery_after_successful_entry", "do": {"quick_breakout": "Leave Zone Early"}},
    {"when": "dz_draw_under_1m30", "do": {"timeout": "use_if_available", "d_pair_hold_pinch_delta": -1}},
    {"when": "pp_opportunity", "do": {"activate_pp1_focus": "Nylander-Matthews one-timers first two looks"}}
  ]
}