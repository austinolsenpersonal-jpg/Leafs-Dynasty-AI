{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://leafs-dynasty-ai.internal/schemas/nhl25_canon_qa_v1_1.json",
  "title": "NHL 25 Next-Gen Canon QA Report (v1.1)",
  "description": "Strict validation specification for Canon tactical preset matrices.",
  "type": "object",
  "required": ["version", "presets"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v\\d+\\.\\d+(\\.\\d+)?$",
      "description": "Version of this preset export (ex: v1.1 or v1.1.0)"
    },
    "presets": {
      "type": "object",
      "description": "Collection of tactical preset families",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["identity", "forecheck", "nz", "dz"],
        "properties": {
          "identity": {
            "type": "string",
            "enum": ["aggressive", "balanced", "conservative"]
          },
          "forecheck": {
            "type": "string",
            "enum": ["2-1-2 aggressive", "1-2-2 passive", "1-3-1 trap", "2-3 press"]
          },
          "nz": {
            "type": "string",
            "enum": ["1-1-3 lock", "1-2-2 red", "1-3-1 funnel", "conservative box"]
          },
          "dz": {
            "type": "string",
            "enum": ["staggered", "collapsing", "tight point", "triangle+1"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
